@model GreenHouse.ContexManager.ReservationManager

@{
    ViewBag.Title = "Start Page";
}

<br />
<br />

<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-4"></div>
        <div class="col-xs-6 text-center">
            <form class="form-find-room form-inline" role="form">
                <h2>Забронировать</h2>
                <br />
                <div class="form-group">
                    <input id="room-name" class="form-control" placeholder="Номер комнаты">
                </div>
                <button type="submit" class="btn btn-primary" onclick="$.GreenHouse.btnReview_Click()">Обзор</button>
            </form>
        </div>
    </div>
</div>

<br />
<br />

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
        <h3>Расписание</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
        <label id="forDate">на @DateTime.Now.Date</label>
    </div>

    <div class="col-xs-2"></div>
    <div id="calendar-week" class="hidden">
        <div class="col-xs-1">
            <h6>Календарь</h6>
        </div>
        <div class="col-xs-2">
            <button id="btnWeekCalendar" class="btn-primary" onclick="$.GreenHouse.btnWeekCalendar_Click()">День</button>
        </div>
    </div>

    <div id="calendar-close">
        <div class="col-xs-1">
            <h6>Календарь</h6>
        </div>
        <div class="col-xs-2">
            <button id="btnToggleCalendar" class="btn-primary" onclick="$.GreenHouse.btnToggleCalendar_Click(this)">Скрыть</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    <div id="table-container" class="col-xs-7">
        <table>
            <tr>
                <td style="vertical-align:top;">

                    <button class="btn-group-sm" onclick="$.GreenHouse.btnLeft_Click()"><</button>
                </td>

                <td valign='top'>
                    <div id='lenta'>
                        <div id='cont'>
                            <table class="table-bordered" id='slider'>
                                <thead>
                                    <tr>
                                        <th></th>
                                        @foreach (var auditory in ViewBag.Auditoriums)
                                        {
                                            <th id="@auditory.AuditoriumId"> @auditory.AuditoriumName</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var tr in Model.Table)
                                    {
                                        <tr>
                                            <td></td>
                                            @foreach (var td in tr)
                                            {
                                                if (td.ReservationId != -1)
                                                {
                                                    <td class="reservation">
                                                        @if (Session["IsAuthenticated"].ToString() == "true" && (Session["UserRole"].ToString() == "admin" || Session["UserEmail"].ToString() == td.User.Email.ToString()))
                                                        {
                                                            <div data-toggle="popover" data-html="true" data-placement="right"
                                                                 data-content="<div class='custompopover'><h6>@td.User.FirstName @td.User.Surname</h6>
                                                            <h6>@td.Purpose</h6> <button  onclick='$.GreenHouse.CancelClick(@td.ReservationId)'
                                                            class='btn btn-group-sm'>Отменить</button> </div>">@td.User.FirstName @td.User.Surname</div>
                                                        }
                                                        else
                                                        {
                                                            <div data-toggle="popover" data-html="true" data-placement="right"
                                                                 data-content="<div class='custompopover'><h6>@td.User.FirstName @td.User.Surname</h6>
                                                            <h6>@td.Purpose</h6> </div>">@td.User.FirstName @td.User.Surname</div>
                                                        }
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        @if (Session["IsAuthenticated"] == "true")
                                                        {
                                                            <div class="new-reservation" data-toggle="popover" data-html="true" data-placement="right"
                                                                 data-content="<div class='custompopover'><h6>Цель</h6> <input id='@td.TargetAuditorium-@td.Hour' type='text'/> <button onclick='$.GreenHouse.ReservClick(@td.StartDate.Year, @td.StartDate.Month,  @td.StartDate.Day, @td.Hour, @td.TargetAuditorium )' class='btn btn-group-sm'>Бронировать</button> </div>">
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="new-reservation">
                                                            </div>
                                                        }
                                                    </td>
                                                }
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </td>
                <td style="vertical-align:top;">
                    <button class="btn-group-sm" onclick="$.GreenHouse.btnRight_Click()">></button>
                </td>
            </tr>
        </table>
    </div>

    <div class="col-xs-4">
        <div class="row">
            <div class="col-xs-8 text-center">
                <div id="calendarContainer">
                    <div id="datetimepicker12"></div>
                    <button class="btn-primary" onclick="$.GreenHouse.btnToday_Click(@DateTime.Now.Date.Year, @DateTime.Now.Date.Month, @DateTime.Now.Date.Day)">Today</button>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@Html.Partial("~/Views/Shared/Rooms.cshtml")