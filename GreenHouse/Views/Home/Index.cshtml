@model GreenHouse.ContexManager.ReservationManager

@{
    ViewBag.Title = "Start Page";
}

<br />
<br />

<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-4"></div>
        <div class="col-xs-6 text-center">
            <form class="form-find-room form-inline" role="form">
                <h2>Забронировать</h2>
                <br />
                <div class="form-group">
                    <input id="room-name" class="form-control" placeholder="Номер комнаты">
                </div>
                <button id="review" type="submit" class="btn btn-primary" onclick="$.GreenHouse.btnReview_Click()">Обзор</button>
            </form>
        </div>
    </div>
</div>

<br />
<br />

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
        <h3>Расписание</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
        <label id="forDate">на @DateTime.Now.Date.Day.@DateTime.Now.Date.Month.@DateTime.Now.Date.Year</label>
    </div>

    <div class="col-xs-2"></div>
    <div id="calendar-week" class="hidden">
        <div class="col-xs-1">
            <h6>Календарь</h6>
        </div>
        <div class="col-xs-2">
            <button id="btnWeekCalendar" class="btn-primary" onclick="$.GreenHouse.btnWeekCalendar_Click()">День</button>
        </div>
    </div>

    <div id="calendar-close">
        <div class="col-xs-1">
            <h6>Календарь</h6>
        </div>
        <div class="col-xs-2">
            <button id="btnToggleCalendar" class="btn-primary" onclick="$.GreenHouse.btnToggleCalendar_Click(this)">Скрыть</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    <div id="table-container" class="col-xs-7">
        <table>
            <tr>
                <td style="vertical-align:top;">

                    <button class="btn-group-sm" onclick="$.GreenHouse.btnLeft_Click()"><</button>
                </td>

                <td valign='top'>
                    <div id='lenta'>
                        <div id='cont'>
                            @Html.Partial("~/Views/Home/Table.cshtml")
                        </div>
                    </div>
                </td>
                <td style="vertical-align:top;">
                    <button class="btn-group-sm" onclick="$.GreenHouse.btnRight_Click()">></button>
                </td>
            </tr>
        </table>
    </div>

    <div class="col-xs-4">
        <div class="row">
            <div class="col-xs-8 text-center">
                <div id="calendarContainer">
                    <div id="datetimepicker12"></div>
                    <button class="btn-primary" onclick="$.GreenHouse.btnToday_Click(@DateTime.Now.Date.Year, @DateTime.Now.Date.Month, @DateTime.Now.Date.Day)">Today</button>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@Html.Partial("~/Views/Shared/Rooms.cshtml")