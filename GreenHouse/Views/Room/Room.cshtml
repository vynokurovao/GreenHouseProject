@model GreenHouse.ContexManager.ReservationManager

@{
    ViewBag.Title = "Аудитория " + ViewBag.Room;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        background-image: url("~/Content/images/bg-header-img.png");
    }

    #td{
         width: 550px;
    }
</style>


<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-4"></div>
        <div class="col-xs-6 text-center">
            <form class="form-find-room form-inline" role="form">
                <h2>Комната @ViewBag.Room</h2>
                <br />
                <br />
            </form>
        </div>
    </div>
</div>

<br />

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
        <h3>Расписание</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-4">
        <label id="forDate">на @ViewBag.Date.Date.Day.@ViewBag.Date.Date.Month.@ViewBag.Date.Date.Year</label>
    </div>

    <div class="col-xs-2"></div>
    <div id="calendar-week">
        <div class="col-xs-1">
            <h6>Календарь</h6>
        </div>
        <div class="col-xs-2">
            <button id="btnWeekCalendar" class="btn-primary" onclick="$.GreenHouse.btnWeekCalendar_Click()">День</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-1"></div>
    <div id="table-container" class="col-xs-7">
        <table>
            <tr>
                <td style="vertical-align:top;">

                    <button class="btn-group-sm" onclick="$.GreenHouse.btnLeft_Click()"><</button>
                </td>

                <td valign='top'>
                    <div id='lenta'>
                        <div id='cont'>
                            @Html.Partial("~/Views/Home/Table.cshtml")
                        </div>
                    </div>
                </td>
                <td style="vertical-align:top;">
                    <button class="btn-group-sm" onclick="$.GreenHouse.btnRight_Click()">></button>
                </td>
            </tr>
        </table>
    </div>

    <div class="col-xs-4">
        <div class="row">
            <div class="col-xs-8 text-center">
                <div id="calendarContainer">
                    <div id="datetimepicker12"></div>
                    <button class="btn-primary" onclick="$.GreenHouse.btnToday_Click(@DateTime.Now.Date.Year, @DateTime.Now.Date.Month, @DateTime.Now.Date.Day)">Today</button>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />

@Html.Partial("~/Views/Shared/Rooms.cshtml")

